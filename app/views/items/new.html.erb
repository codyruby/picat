            </div>
            <div class="field">
            <%= f.label :description, "Description:" %><br />
            <%= f.text_area :description, class: "form-control" %>
            </div>
            <div class="field">
            <%= f.label :price, "Prix:" %><br />
            <%= f.text_field :price, class: "form-control" %>
            </div>
            <div class="field">
            <%= f.label :picture, "LocalitÃ©:" %><br />
